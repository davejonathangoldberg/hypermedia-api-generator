{
  "apiName"         : "beach_perm",
  "basepath"        : "/",
  "mediaType"      : "application/json+hal",
  "resources" : [
    {
      "name"        : "attendees",
      "model"       : "attendees",
      "resources"   : [
        {
          "name"        : "topics",
          "model"       : "topics"
        }
      ]
    },
    {
      "name"        : "topics",
      "model"       : "topics"
    }
  ],
  "models"  : [
    {
      "title": "attendees",
      "isCollection"  : true,
      "hasNamedInstances" : false,
      "type": "object",
      "properties": {
          "name": {
              "type": "string"
          },
          "apiExperience": {
              "type": "string"
          },
          "employer": {
              "type": "string"
          },
          "distanceToHome": {
              "type": "function",
              "data" : "distanceToHome(distances.lat1, distances.lon1, distances.lat2, distances.lon2)"
          }
      },
      "required": ["name", "apiExperience", "employer"]
    },
    {
      "title" : "topics",
      "isCollection"  : true,
      "hasNamedInstances" : false,
      "type": "object",
      "properties": {
        "name": {
            "type": "string"
        },
        "moderator": {
            "type": "string"
        }
      },
      "required": ["name", "moderator"]
    }
  ]
}