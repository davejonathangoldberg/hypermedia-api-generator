{
	"_links": {
		"self": { "href": "{{ path }}" },
		{{#if parent}}"parent" : { "href" : "{{parent}}" },{{/if}}
		{{#if children}}
			{{#each children}}
				"{{this}}" : { "href" : "{{../path}}/{{this}}" },
			{{/each}}
		{{/if}}
		"curies": [{ "name": "assignees", "href": "http://example.com/docs/rels/assignees", "templated": false }]
	},
	{{#if collection}}
	"_embedded" : {
		"assignees" : [
			{{#each assignees}}
				{
					"_links" : {
						"self": { "href": "{{path}}{{id}}" }
					},
"firstName" : "{{firstName}}",
"lastName" : "{{lastName}}",
"emailAddress" : "{{emailAddress}}",
"id" : "{{id}}"
				}{{#unless @last}},{{/unless}}
			{{/each}}
		]
	}
	{{else}}
"firstName" : "{{assignees.firstName}}",
"lastName" : "{{assignees.lastName}}",
"emailAddress" : "{{assignees.emailAddress}}",
"id" : "{{assignees.id}}"
	{{/if}}
}