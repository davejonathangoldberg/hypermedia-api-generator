{
	"_links": {
		"self": { "href": "{{ path }}" },
		{{#if parent}}"parent" : { "href" : "{{parent}}" },{{/if}}
		{{#if children}}
			{{#each children}}
				"{{this}}" : { "href" : "{{../path}}/{{this}}" },
			{{/each}}
		{{/if}}
		"curies": [{ "name": "items", "href": "http://example.com/docs/rels/items", "templated": false }]
	},
	{{#if collection}}
	"_embedded" : {
		"items" : [
			{{#each items}}
				{
					"_links" : {
						"self": { "href": "{{path}}{{id}}" }
					},
"description" : "{{description}}",
"priority" : "{{priority}}",
"dueDate" : "{{dueDate}}",
"id" : "{{id}}"
				}{{#unless @last}},{{/unless}}
			{{/each}}
		]
	}
	{{else}}
"description" : "{{items.description}}",
"priority" : "{{items.priority}}",
"dueDate" : "{{items.dueDate}}",
"id" : "{{items.id}}"
	{{/if}}
}