{
	"_links": {
		"self": { "href": "{{ path }}" },
		{{#if parent}}"parent" : { "href" : "{{parent}}" },{{/if}}
		{{#if children}}
			{{#each children}}
				"{{this}}" : { "href" : "{{path}}{{this}}" },
			{{/each}}
		{{/if}}
		"curies": [{ "name": "posts", "href": "http://example.com/docs/rels/posts", "templated": false }]{{#if collection}},{{/if}}
		{{#if collection}}"next": { "href": "{{path}}?offset=50&limit=50" }{{/if}}
	},
	{{#if collection}}
	"_embedded" : {
		"posts" : [
			{{#each posts}}
				{
					"_links" : {
						"self": { "href": "{{path}}{{id}}" }
					"},"title" : "{{title}}",
"content" : "{{content}}",
"author" : "{{author}}",
"id" : "{{id}}"
				}{{#unless @last}},{{/unless}}
			{{/each}}
		]
	}
	{{else}}
"title" : "{{posts.title}}",
"content" : "{{posts.content}}",
"author" : "{{posts.author}}",
"id" : "{{posts.id}}"
	{{/if}}
}