{
	"_links": {
		"self": { "href": "{{ path }}" }
		{{#if parent}}"parent" : { "href" : "{{parent}}" },{{/if}}
		{{#if children}}
			{{#each children}}
				"{{this}}" : { "href" : "{{path}}{{this}}" },
			{{/each}}
		{{/if}}
		"curies": [{ "name": "widgets", "href": "http://example.com/docs/rels/widgets", "templated": false }],
		{{#if collection}}"next": { "href": "{{path}}?offset=50&limit=50" }{{/if}}
	},
	{{#if collection}}
	"_embedded" : {
		"widgets" : [
			{{#each widgets}}
				{
					"_links" : {
						"self": { "href": "{{path}}{{id}}" }
					"},"color" : "{{color}}",
"speed" : "{{speed}}",
"size" : "{{size}}",
"id" : "{{id}}"
				}
{{#unless @last}},{{/unless}}
			{{/each}}
		]
	}
	{{else}}
				{
"color" : "{{widgets.color}}",
"speed" : "{{widgets.speed}}",
"size" : "{{widgets.size}}",
"id" : "{{widgets.id}}"
				}
	{{/if}}
}